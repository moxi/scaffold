<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lamcreations.scaffoldsampleapp" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SampleCollapsingToolbarActivity"
            android:theme="@style/AppTheme.TranslucentStatus" />
        <activity
            android:name=".SampleCollapsingToolbarDrawerActivity"
            android:theme="@style/AppTheme.TranslucentStatus" />
        <activity
            android:name=".SampleCollapsingToolbarTabDrawerActivity"
            android:theme="@style/AppTheme.TranslucentStatus" />
        <activity android:name=".SampleCoordinatorActivity" />
        <activity
            android:name=".SampleDrawerActivity"
            android:theme="@style/AppTheme.TranslucentStatus" />
        <activity
            android:name=".SampleSearchableActivity"
            android:theme="@style/AppTheme.TranslucentStatus" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity android:name=".SampleSettingsActivity" />
        <activity android:name=".SampleSettingsActivityWithHeaders" />
        <activity android:name=".SampleTabActivity" />
        <activity
            android:name=".SampleTabDrawerActivity"
            android:theme="@style/AppTheme.TranslucentStatus" />
        <activity android:name=".SampleToolbarActivity" />
        <activity android:name=".SampleBottomNavigationActivity" />
        <activity android:name=".SampleToolbarBottomNavigationActivity" />
        <activity android:name=".SampleCoordinatorBottomNavigationActivity" />
    </application>

</manifest>
